<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/pokemonListFragment">

    <fragment
        android:id="@+id/pokemonListFragment"
        android:name="com.shouldz.pokedex.ui.list.PokemonListFragment"
        android:label="fragment_pokemon_list"
        tools:layout="@layout/fragment_pokemon_list" >
        <action
            android:id="@+id/action_pokemonListFragment_to_caughtListFragment"
            app:destination="@id/caughtListFragment" />
        <action
            android:id="@+id/action_pokemonListFragment_to_pokemonDetailFragment"
            app:destination="@id/pokemonDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/pokemonDetailFragment"
        android:name="com.shouldz.pokedex.ui.detail.PokemonDetailFragment"
        android:label="fragment_pokemon_detail"
        tools:layout="@layout/fragment_pokemon_detail" >
        <action
            android:id="@+id/action_pokemonDetailFragment_to_caughtListFragment"
            app:destination="@id/caughtListFragment" />
        <action
            android:id="@+id/action_pokemonDetailFragment_to_pokemonListFragment"
            app:destination="@id/pokemonListFragment" />
    </fragment>
    <fragment
        android:id="@+id/caughtListFragment"
        android:name="com.shouldz.pokedex.ui.caught.CaughtListFragment"
        android:label="fragment_caught_list"
        tools:layout="@layout/fragment_caught_list" >
        <action
            android:id="@+id/action_caughtListFragment_to_pokemonDetailFragment"
            app:destination="@id/pokemonDetailFragment" />
        <action
            android:id="@+id/action_caughtListFragment_to_pokemonListFragment"
            app:destination="@id/pokemonListFragment" />
    </fragment>
</navigation>